<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #ecb6fc;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.reservasuq.controladores.IniciarSesionControlador">
    <children>
        <Label layoutX="50.0" layoutY="23.0" text="Inicie sesión para empezar a usar todos los beneficios">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <VBox layoutX="31.0" layoutY="51.0" prefHeight="122.0" prefWidth="526.0">
            <children>
                <GridPane prefHeight="166.0" prefWidth="438.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Correo electrónico:">
                     <font>
                        <Font name="System Bold Italic" size="16.0" />
                     </font></Label>
                        <Label text="Contraseña" GridPane.rowIndex="1">
                     <font>
                        <Font name="System Bold Italic" size="16.0" />
                     </font></Label>
                        <PasswordField fx:id="txtContrasena" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextField fx:id="txtEmail" GridPane.columnIndex="1" />
                    </children>
                </GridPane>
            </children>
        </VBox>
        <CheckBox fx:id="txtValidar" layoutX="31.0" layoutY="182.0" mnemonicParsing="false" text="Si eres administrador puedes dar clic aquí para iniciar sesión al panel de administrador">
         <font>
            <Font name="System Bold Italic" size="13.0" />
         </font></CheckBox>
      <HBox alignment="CENTER" layoutX="5.0" layoutY="278.0" prefHeight="57.0" prefWidth="600.0" style="-fx-spacing: 50;">
         <children>
            <Button fx:id="volver" mnemonicParsing="false" onAction="#volver" prefHeight="51.0" prefWidth="106.0" style="-fx-background-color: #ce3ff8;" text="Volver" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Button>
            <Button fx:id="iniciarSesion" mnemonicParsing="false" onAction="#iniciarSesion" prefHeight="52.0" prefWidth="133.0" style="-fx-background-color: #ce3ff8;" text="Iniciar Sesión" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Button>
         </children>
      </HBox>
    </children>
</AnchorPane>
